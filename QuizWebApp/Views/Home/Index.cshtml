@{
    ViewBag.Title = "Welcome";
}
<div>
    <div class="pnl pnl-default">
        @if (this.User.Identity.IsAuthenticated)
        {
            <p>
                <a href="@Url.Action("Index", "Player")" class="btn btn-block btn-large btn-primary">Go to Quiz</a>
            </p>
            if (ViewBag.IsQuizMaster)
            {
                <p>
                    <a href="@Url.Action("Index", "Question")" class="btn btn-block btn-large">Questions</a>
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-block btn-large">Quiz admin</a>
                    <a href="@Url.Action("Current", "Dashboard")" class="btn btn-block btn-large">Current question dashboard</a>
                </p>
            }
        }
        else
        {
            <p>
                <a href="@Url.Action("SignIn", "Account")" class="btn btn-block btn-large btn-primary">Sign In</a>
            </p>
        }
    </div>
</div>
