@model QuizWebApp.Models.Question
@using QuizWebApp.Helpers
<fieldset>
    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.Body)
        </dt>

        <dd>
            <pre>Model.Body</pre>
        </dd>

        <dt>Answer choices</dt>
        <dd>
            <ol>
                @foreach (var option in Model.GetOptions())
                {
                    <li>
                        <div>@option.Option</div>
                        <div><img src="@option.OptionImage" class="@(string.IsNullOrEmpty(option.OptionImage) ? "no-image" : "")"/></div>
                    </li>
                }
            </ol>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IndexOfCorrectOption)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IndexOfCorrectOption)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Comment)
        </dt>

        <dd>
            <pre>Model.Comment</pre> &nbsp;
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreateAt)
        </dt>

        <dd>
            @Model.CreateAt.ToLocalDateTimeString()
        </dd>

    </dl>
</fieldset>
