@model QuizWebApp.Models.Question
@{
    ViewBag.Title = "Remove the quiz problem";
}
<hgroup>
    <h2>@ViewBag.Title</h2>
    <h3>@ViewBag.Message</h3>
    <h3>Do you want to delete the quiz problem of following?</h3>
</hgroup>

<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.Partial("_DisplayFormPartial", Model)
        <div>
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a href="@Url.Action("Index")" class="btn">Cancel</a>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
