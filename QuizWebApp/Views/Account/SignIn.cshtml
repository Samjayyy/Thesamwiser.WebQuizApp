@model QuizWebApp.Models.SignInViewModel

@{
    ViewBag.Title = "Log in";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h1>@ViewBag.Title</h1>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <fieldset class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.HandleName, new { @class = "control-label col-sm-2" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.HandleName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.HandleName, null, new { @class = "help-inline" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Pass, new { @class = "control-label col-sm-2" })
                    <div class="col-sm-8">
                        @Html.PasswordFor(model => model.Pass, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Pass, null, new { @class = "help-inline" })
                    </div>
                </div>
                <div class="form-actions no-color">
                    <input type="submit" value="OK" class="btn btn-primary" />
                </div>
            </fieldset>
        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
